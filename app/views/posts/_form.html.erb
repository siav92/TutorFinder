<%= simple_form_for @post do |f| %>
<%= f.input :title, label: 'Title', error: 'Please provide a title' %>
<%= f.input :body, label: 'Content', error: 'Please provide you post content' %>
<%= f.input :photo, label:'Upload a Photo', error: 'Image must be .png or .jpeg' %>
<%= f.button :submit do %>
<i class="btn btn-primary"></i>
Create Post
<% end %>
<% end %>