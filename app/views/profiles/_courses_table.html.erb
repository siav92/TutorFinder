<% if !@courses.blank? %>
     <div class="row">
          <div class="table-responsive col-sm-6">
          <table class="table table-bordered " summary="Student course list" >
            <tr style = "background-color: orange;">
                <th></th>
                <th>Department</th>
                <th>Course</th>
                <th>Title</th>
                <th>Comment</th>
            </tr>
            <% @courses.each do |x| %>
            <tr>
                <td>
                    <%= link_to(:controller => "profiles", :action => "removeCourse", :id => x.id) do %> 
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    <% end %>
                </td>
                <td><%= x.department %></td>
                <td><%= x.course_number %></td>
                <td><%= x.course_name %></td>
                <td><%= x.description %></td>
            </tr>
            <% end %>
          </table>
        </div>
        <div class="col-sm4"></div>
        <div class="col-sm4"></div>
    </div>
<% else %>
    <div class="table-responsive col-sm-6">
        You haven't added any course to your list yet.
    </div>
<% end %>