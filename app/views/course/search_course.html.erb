<% @page_title = "Select Course" %>
 <div class="progress">
  <div class="progress-bar progress-bar-success" style="width: 50%">
    Department: <%= params[:department] %>
  </div>
  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
    Step 2: Select Course
  </div>
</div>   
<div class="well">
<%= link_to(:action => 'search_department') do %><div class="btn btn-success">
                    <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>Change Department</div><%end%>&nbsp;
<% if !@courses.blank? %>
 <div class="btn-group">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Select Course <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
      <% @courses.each do |x| %>          
            <li class="list-group-item"> 
                <%= link_to :controller => 'searchTutor', :action => 'index', :id => x.id do %>
                <%= x.course_name %> ( <%= x.course_number %> ) 
                <%end%>
            </li>
        <%end%>
  </ul>
</div>
<% end %>
</div>