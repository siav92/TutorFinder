<% @page_title = "Edit Course Description" %>

<div class="well">
    <% if !@course_tutor.blank? %>
        <h3>Edit Description</h3>
        <p>Add your experience here:</p>
            
        <%= form_for @course_tutor, :url => {:action => "update_description", :id => @course_tutor.id, :description => @course_tutor.description } do |course_tutor| %>

            <% if @course_tutor.errors.any? %>
            <div id="error_explanation">
                    <%= pluralize(@course_tutor.errors.count, "error") %> prohibited this request from being sent:
                <ul>
                    <% @course_tutor.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>

        <p>
            <%= course_tutor.label :description, 'Description:' %><br>
            <%= course_tutor.text_area :description, cols: "60", rows: "10" %>
        </p>

        <p>
            <%= course_tutor.submit "Update Description", :class => 'btn btn-info' %>
        </p>

        <%= link_to(:controller => 'profiles', :action => 'index', :id => session[:user_id]) do %><div class="btn btn-primary">Go Back</div><% end %>

        <% end %>

    <% else %>
    
        <p>There record you are looking for does not exist.</p>
        <%= link_to(:controller => 'profiles', :action => 'index', :id => session[:user_id]) do %><div class="btn btn-primary">Go Back</div><% end %>
    
    <% end %>  
    
</div>