<% @page_title = "Select Department" %>
 <div class="progress">
  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
    Step 1: Select Department
    </div>
</div>
<div class="well">
<% if !@departments.blank? %>
 <div class="btn-group">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Select Department <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
      <% @departments.each do |x| %>          
            <li class="list-group-item"> 
                <%= link_to( :controller => 'Course',:action => 'search_course', :department => x ) do %><%= x %><%end%>
            </li>
        <%end%>
  </ul>
</div>
<%else%>
    <p>There are no course for selected department.</p>
<% end %>
</div>