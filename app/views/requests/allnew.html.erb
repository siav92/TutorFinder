<% @page_title = "Appointment Request" %>
<div class="well">

<h3>Appointment Request</h3>

<%= form_for @request do |request| %>
 
<% if @request.errors.any? %>
<div id="error_explanation">

        <%= pluralize(@request.errors.count, "error") %> prohibited this request from being sent:

    <ul>
        <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<p>
    <%= request.hidden_field :tutorID%>
</p>

<p>
    <%= request.hidden_field :studentID, :value => session[:user_id] %>
</p>

<p>
    <%= request.label :courseID, 'Course Name: (Select one of the available course from this tutor)' %><br>
    <%= request.collection_select :courseID, @tutor_cours, :course_id, :course_number, :prompt => "Select a course" %>
</p>
    
<p>
    <%= request.label :apptDate, 'Appointment Date (YYYY-MM-YY):' %><br>
    <%= request.text_field :apptDate %>
</p> 
    
<p>
    <%= request.label :startTime, 'Start Time:' %><br>
    <%= request.text_field :startTime %>
</p>
    
<p>
    <%= request.label :endTime, 'End Time:' %><br>
    <%= request.text_field :endTime %>
</p>

<p>
    <%= request.label :note, 'Special Request (Notes):' %><br>
    <%= request.text_area :note, cols: "60", rows: "10" %>
</p>

<p>
    <%= request.submit :class => 'btn btn-info' %>
</p>

<%= link_to(:controller => 'profiles', :action => 'index', :id => session[:user_id]) do %><div class="btn btn-primary">Go Back</div><% end %>

<% end %>
    
</div>